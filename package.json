{
  "name": "porto",
  "private": true,
  "type": "module",
  "scripts": {
    "wipe": "rm -rf **/node_modules **/.turbo .next .expo .parcel-cache **/dist **/_dist **/.cache pnpm-lock.yaml **/pnpm-lock.yaml **/.pnpm-store .pnpm-store **/tsconfig.tsbuildinfo **/*.tsbuildinfo && pnpm store prune",
    "build": "pnpm clean && tsc --project ./tsconfig.build.json",
    "build:contracts": "forge build --config-path ./contracts/foundry.toml",
    "changeset:prepublish": "pnpm build && tsx ./scripts/prepublish.ts",
    "changeset:publish": "pnpm changeset:prepublish && changeset publish",
    "changeset:version": "changeset version && pnpm format",
    "check": "biome check . --fix --unsafe",
    "check:build": "tsx ./scripts/prepublish.ts && publint --strict ./src && attw --pack ./src --profile esm-only",
    "check:knip": "knip --production",
    "check:repo": "sherif",
    "check:size": "size-limit",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf src/_dist ./tsconfig.build.tsbuildinfo src/tsconfig.build.tsbuildinfo",
    "deps": "pnpx taze -r",
    "dev": "pnpm preconstruct && pnpm --filter playground dev",
    "dev:wagmi": "pnpm preconstruct && pnpm --filter wagmi-example dev",
    "format": "biome format --write",
    "postinstall": "pnpm build:packages",
    "preconstruct": "tsx ./scripts/preconstruct.ts",
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm simple-git-hooks",
    "dev:playground": "pnpm --filter playground dev",
    "dev-ios:debug": "EXPO_USE_METRO_WORKSPACE_ROOT=1 pnpm --filter porto-expo ios:debug",
    "build:packages": "pnpm --filter \"@porto/expo-*\" build && pnpm build"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.1",
    "@biomejs/biome": "^1.8.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@size-limit/preset-big-lib": "^11.1.6",
    "@tanstack/react-query": "catalog:",
    "@types/node": "^22.5.4",
    "@types/react": "catalog:",
    "@wagmi/cli": "^2.1.18",
    "eslint": "^8.57.0",
    "jest": "^29.0.0",
    "knip": "^5.30.6",
    "minimatch": "^10.0.1",
    "publint": "^0.2.12",
    "sherif": "^0.11.0",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.1.6",
    "tsx": "^4.17.0",
    "typescript": "catalog:",
    "viem": "catalog:",
    "wagmi": "catalog:"
  },
  "packageManager": "pnpm@9.7.0",
  "engines": {
    "node": ">=22"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm check"
  },
  "knip": {
    "entry": ["src/{index,wagmi/index}.ts!"],
    "project": ["src/**"],
    "ignore": ["**/internal/**", "src/core/internal/generated.ts"],
    "ignoreDependencies": ["@tanstack/react-query", "react", "wagmi"]
  },
  "size-limit": [
    {
      "name": "import * from 'ox'",
      "path": "./src/_dist/index.js",
      "import": "*",
      "limit": "54 kB"
    }
  ]
}
